<main class="auth-wrapper bg-white">
  <section class="auth-container">
    <header class="auth-header center-text">
      <div class="icon-crest bg-pry center-text">
        <i class="ti ti-github"></i>
      </div>
      <h2 class="auth-title">register</h2>
    </header>

    <section>
      <form action="/users/signup" method="POST">
        <% include ./partials/messages %>
        <input type="hidden" name="name" value=" admin">
        <div class="input-field">
          <label for="email">email</label>
          <input type="email" name="email" placeholder="jondoe@example.com"
            value="<%= typeof email != 'undefined' ? email : '' %>" required>
          <span data-error-email></span>
        </div>
        <div class="input-field">
          <label for="password">password</label>
          <input type="password" name="password" placeholder="Password"
            value="<%= typeof password != 'undefined' ? password : '' %>" required>
          <span data-error-pwd></span>
        </div>
        <div class="input-field">
          <label for="password">re-enter password</label>
          <input type="password" name="rePassword" placeholder="Confirm Password"
            value="<%= typeof rePassword != 'undefined' ? rePassword : '' %>" required>
          <span data-error-pwd></span>
        </div>

        <div class="input-field" style="margin-top: 1.5rem;">
          <button type="submit" class="btn btn-pry btn-block" data-login-btn>
            Register
          </button>
        </div>
      </form>

      <footer class="center-text" style="margin-top: 1.5rem;">
        Have an account? <a style="padding: 0.4rem; font-weight: bold;" href="/users/login">Login</a>
      </footer>
    </section>
  </section>

</main>